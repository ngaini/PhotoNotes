<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ngaini.photonotes" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_camera_enhance_black_48dp"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="Photo Notes" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewPhotoActivity"
            android:label="Photo Notes" >
        </activity>
        <activity
            android:name=".AddPhotoActivity"
            android:label="Add Picture" >
        </activity>
        <activity
            android:name=".BaseMenuActivity"
            android:label="@string/title_activity_base_menu" >
        </activity>
    </application>

</manifest>
